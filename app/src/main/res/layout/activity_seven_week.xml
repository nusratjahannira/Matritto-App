<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    android:background="#f774a0"
    android:layout_alignParentTop="true"
    tools:context="com.myapp.pregnancyapp.SevenWeek">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <TextView
        android:id="@+id/text16"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="#f2e9ee"
        android:paddingTop="10dp"
        android:text=" লম্বায় আপনার গর্ভের সন্তান এখন প্রায় ১ সেন্টিমিটার। আপনার গর্ভের ভ্রুনটি আস্তে আস্তে ছোট্ট একজন মানুষে পরিনত হচ্ছে। এ সময়ে হাড়ের গঠন শুরু হয়। এ সপ্তাহে শিশুর মস্তিষ্কের বিকাশ দ্রুত ... "
        android:textStyle="bold"
        android:paddingBottom="10dp"
        android:textColor="#282360"
        android:textSize="15sp" />
        <Button

            android:layout_width="98dp"
            android:layout_height="50dp"
            android:layout_alignParentTop="true"
            android:layout_marginHorizontal="142dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="110dp"
            android:background="#da3344"
            android:text=" ভিডিও "
            android:textColor="#ffffff"
            android:textSize="15sp"
            android:textStyle="bold"
            android:onClick="sevenButton"/>

        <Button
            android:id="@+id/next7"
            android:layout_width="98dp"
            android:layout_height="60dp"
            android:layout_alignParentTop="true"
            android:layout_marginHorizontal="142dp"
            android:layout_marginLeft="0dp"
            android:background="#fa8888"
            android:text="৮ম সপ্তাহ "
            android:textColor="#16040d"
            android:textSize="15sp"
            android:textStyle="bold" />
    </LinearLayout>


</ScrollView>
